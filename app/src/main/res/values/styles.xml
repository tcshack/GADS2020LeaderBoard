<resources>

    <style name="SplashScreen" parent="@style/AppTheme">
        <item name="android:statusBarColor">@color/dark_two</item>
        <item name="android:navigationBarColor">@color/dark_two</item>
        <item name="android:fontFamily">@font/productsansregular</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ps_blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/ps_blue_dark</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="homeAsUpIndicator">?android:homeAsUpIndicator</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="@style/Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/dark_two</item>
    </style>

    <style name="Theme.MaterialComponents.NoActionBar" parent="@style/Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
